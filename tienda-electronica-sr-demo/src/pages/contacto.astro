---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Contacto | Tienda Electrónica SR">
  <h1 class="text-xl font-semibold">Contacto</h1>
  <div class="mt-4 grid gap-6 md:grid-cols-2">
    <div class="rounded-lg border border-slate-200 p-6 text-sm text-slate-700">
      <div class="font-semibold">Canales</div>
      <div class="mt-3 space-y-2">
        <div>WhatsApp: placeholder</div>
        <div>Email: placeholder</div>
        <div>Dirección: placeholder</div>
      </div>
    </div>

    <div class="rounded-lg border border-slate-200 p-6">
      <div class="font-semibold">Escribinos</div>
      <form class="mt-3 space-y-3">
        <label class="block text-sm">Nombre<input class="mt-1 w-full rounded-md border border-slate-200 px-3 py-2" /></label>
        <label class="block text-sm">Email<input class="mt-1 w-full rounded-md border border-slate-200 px-3 py-2" /></label>
        <label class="block text-sm">Mensaje<textarea class="mt-1 w-full rounded-md border border-slate-200 px-3 py-2" rows="4"></textarea></label>
        <button type="button" class="w-full rounded-md border border-slate-200 px-4 py-2 text-sm hover:bg-slate-50">
          Enviar (demo)
        </button>
      </form>
    </div>
  </div>
</BaseLayout>
