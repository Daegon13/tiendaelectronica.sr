---
const { href } = Astro.props as { href: (p: string) => string };
---
<footer class="border-t border-slate-200">
  <div class="mx-auto grid max-w-6xl gap-6 px-4 py-8 md:grid-cols-3">
    <div>
      <div class="font-semibold">Tienda Electrónica SR</div>
      <div class="mt-2 text-sm text-slate-600">Demo navegable: carrito, checkout y confirmación.</div>
    </div>
    <div class="text-sm">
      <div class="font-semibold">Legales</div>
      <ul class="mt-2 space-y-1 text-slate-600">
        <li><a class="hover:underline" href={href("/legal/privacidad")}>Privacidad</a></li>
        <li><a class="hover:underline" href={href("/legal/terminos")}>Términos</a></li>
        <li><a class="hover:underline" href={href("/legal/envios")}>Envíos</a></li>
        <li><a class="hover:underline" href={href("/legal/devoluciones")}>Devoluciones</a></li>
      </ul>
    </div>
    <div class="text-sm">
      <div class="font-semibold">Contacto</div>
      <div class="mt-2 text-slate-600">WhatsApp y correo (placeholder).</div>
      <div class="mt-2 flex gap-3">
        <a class="underline" href={href("/contacto")}>Ver contacto</a>
      </div>
    </div>
  </div>
</footer>
